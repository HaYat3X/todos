<div class="row">
  <div class="col-lg-6">
    <div class="bg-body-secondary p-3 mx-1" data-bs-theme="dark">
      <h4 class="text-center mb-3">Todos</h4>
      <p>
        <button type="button" class="btn btn-primary px-5" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          Add Todos
        </button>
      </p>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <% if @todo.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <% @todo.errors.each do |error| %>
                <strong>エラー！</strong> - <%= error.full_message %><br>
              <% end %>
            </div>
          <% end %>
          <%= form_with(model: @todo, url: "/todos/create", local: true) do |form| %>
            <div class="mb-3">
              <%= form.text_area :todos, class: "form-control", placeholder: "Todo Content", rows: 2, required: true %>
            </div>
            <%= form.submit "Add Todos", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      <div class="mt-3">
        <% @todos.each do |todo| %>
          <% if todo.state == nil %>
            <div class="card card-body mb-1">
              <p class="card-text"><%= todo.todos %></p>
              <div class="d-flex control-icon">
                <%= link_to "/todos/destroy/#{todo.id}", class: 'text-danger', method: :delete do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                  </svg>
                <% end %>
                <%= link_to "/todos/complete/#{todo.id}", class: 'text-success', method: :patch do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2" viewBox="0 0 16 16">
                    <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                  </svg>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="bg-body-secondary p-3 mx-1" data-bs-theme="dark">
      <h4 class="text-center mb-3">Complete</h4>
      <% @todos.each do |todo| %>
        <% if todo.state != nil %>
          <div class="card card-body mb-1">
            <p class="card-text"><%= todo.todos %></p>
            <div class="d-flex control-icon">
              <%= link_to "/todos/destroy/#{todo.id}", class: 'text-danger', method: :delete do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
