<div class="row">
  <div class="col-lg-6">
    <div class="bg-body-secondary p-3 mx-1" data-bs-theme="dark">
      <h4 class="text-center mb-3">Todos</h4>
      <p>
        <button type="button" class="btn btn-primary px-4" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          Set Todos
        </button>
      </p>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <% if @todo.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <% @todo.errors.each do |error| %>
                <strong>エラー！</strong> - <%= error.full_message %><br>
              <% end %>
            </div>
          <% end %>
          <%= form_with(model: @todo, url: "/todos/create", local: true) do |form| %>
            <div class="mb-3">
              <%= form.text_area :todos, class: "form-control", placeholder: "Todo Content", rows: 2, required: true %>
            </div>
            <%= form.submit "追加", class: "btn btn-success px-5" %>
          <% end %>
        </div>
      </div>
      <div class="mt-3">
        <% @todos.each do |todo| %>
          <div class="card card-body mb-1">
            <p class="card-text"><%= todo.todos %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="bg-body-secondary p-3 mx-1" data-bs-theme="dark">
      <h4 class="text-center mb-3">Complete</h4>
    </div>
  </div>
</div>
